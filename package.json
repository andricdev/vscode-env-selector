{
  "name": "vscode-env-selector",
  "displayName": ".ENV Selector",
  "description": "Switch .env file content.",
  "icon": "images/logo.png",
  "version": "0.3.0",
  "publisher": "andricdev",
  "repository": {
    "type": "git",
    "url": "https://github.com/andricdev/vscode-env-selector.git"
  },
  "engines": {
    "vscode": "^1.49.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "dotenv",
    "env",
    "Environment Variables",
    "selector"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "envSelector.selectEnv",
        "title": "ðŸ”€.ENV Selector"
      }
    ],
    "keybindings": [
      {
        "command": "envSelector.selectEnv",
        "key": "ctrl+k ctrl+e"
      }
    ],
    "configuration": [
      {
        "title": ".ENV Seletcor",
        "properties": {
          "envSelector.enabled": {
            "markdownDescription": "Enable/Disable the extension globally, or per workspace.   \r\n _*Requires window reload to take effect.*_",
            "type": "boolean",
            "default": true
          },
          "envSelector.regex": {
            "markdownDescription": "regex pattern to find preset `.env` files.",
            "type": "string",
            "default": "*.env*"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.49.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "lnk": "^1.1.0",
    "md5-file": "^5.0.0",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "lnk": "^1.1.0",
    "md5-file": "^5.0.0"
  }
}
